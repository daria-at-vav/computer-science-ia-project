<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MenuScreen">
   <top>
      <Pane prefHeight="150.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="248.0" layoutY="73.0" text="Select a Level:" textFill="#bc558c">
               <font>
                  <Font name="Comic Sans MS Bold" size="40.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </top>
   <bottom>
      <Pane prefHeight="150.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="quitGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="500.0" mnemonicParsing="false" onAction="#onQuitGameButtonClicked" prefHeight="65.0" prefWidth="199.0" style="-fx-background-color: #fadcf2; -fx-border-width: 5; -fx-border-color: #e09bce; -fx-border-insets: -2;" text="QUIT GAME" textAlignment="CENTER" textFill="#bc61aa">
               <font>
                  <Font name="Comic Sans MS Bold" size="25.0" />
               </font>
            </Button>
            <Button fx:id="rulesButton" alignment="CENTER" contentDisplay="CENTER" layoutX="113.0" mnemonicParsing="false" onAction="#onRulesButtonClicked" prefHeight="65.0" prefWidth="199.0" style="-fx-background-color: #fadcf2; -fx-border-width: 5; -fx-border-color: #e09bce; -fx-border-insets: -2;" text="RULES" textAlignment="CENTER" textFill="#bc61aa">
               <font>
                  <Font name="Comic Sans MS Bold" size="25.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </bottom>
   <center>
      <Pane prefHeight="300.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="lvlOneButton" layoutX="56.0" layoutY="30.0" mnemonicParsing="false" onAction="#onLvlOneButtonClicked" prefHeight="82.0" prefWidth="200.0" style="-fx-background-color: #ffdbf9; -fx-border-insets: -2; -fx-border-color: #e693d5; -fx-border-width: 5;" text="LEVEL 1" textFill="#cf5db3">
               <font>
                  <Font name="Comic Sans MS Bold" size="35.0" />
               </font>
            </Button>
            <Button fx:id="lvlTwoButton" disable="true" layoutX="297.0" layoutY="28.0" mnemonicParsing="false" onAction="#onLvlTwoButtonClicked" prefHeight="82.0" prefWidth="200.0" style="-fx-background-color: #ffdbf9; -fx-border-insets: -2; -fx-border-color: #e693d5; -fx-border-width: 5;" text="LEVEL 2" textFill="#cf5db3">
               <font>
                  <Font name="Comic Sans MS Bold" size="35.0" />
               </font>
            </Button>
            <Button fx:id="lvlThreeButton" disable="true" layoutX="540.0" layoutY="27.0" mnemonicParsing="false" onAction="#onLvlThreeButtonClicked" prefHeight="82.0" prefWidth="200.0" style="-fx-background-color: #ffdbf9; -fx-border-insets: -2; -fx-border-color: #e693d5; -fx-border-width: 5;" text="LEVEL 3" textFill="#cf5db3">
               <font>
                  <Font name="Comic Sans MS Bold" size="35.0" />
               </font>
            </Button>
         </children></Pane>
   </center>
</BorderPane>
