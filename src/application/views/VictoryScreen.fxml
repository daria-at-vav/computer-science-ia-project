<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.VictoryScreen">
   <top>
      <Pane prefHeight="150.0" prefWidth="800.0" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <Pane prefHeight="150.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="quitGameButton" alignment="CENTER" contentDisplay="CENTER" layoutX="298.0" layoutY="-2.0" mnemonicParsing="false" onAction="#onQuitGameButtonClicked" prefHeight="65.0" prefWidth="199.0" style="-fx-background-color: #dfdcfa; -fx-border-width: 5; -fx-border-color: #9ba7e0; -fx-border-insets: -2;" text="QUIT GAME" textAlignment="CENTER" textFill="#6f61ba">
               <font>
                  <Font name="Comic Sans MS Bold" size="25.0" />
               </font>
            </Button>
            <Button fx:id="nextLevelButton" alignment="CENTER" contentDisplay="CENTER" layoutX="80.0" layoutY="-2.0" mnemonicParsing="false" onAction="#onNextLevelButtonClicked" prefHeight="65.0" prefWidth="199.0" style="-fx-background-color: #dfdcfa; -fx-border-width: 5; -fx-border-color: #9ba7e0; -fx-border-insets: -2;" text="NEXT LEVEL" textAlignment="CENTER" textFill="#6f61ba">
               <font>
                  <Font name="Comic Sans MS Bold" size="25.0" />
               </font>
            </Button>
            <Button fx:id="mainMenuButton" alignment="CENTER" contentDisplay="CENTER" layoutX="513.0" layoutY="-2.0" mnemonicParsing="false" onAction="#onMainMenuButtonClicked" prefHeight="65.0" prefWidth="206.0" style="-fx-background-color: #dfdcfa; -fx-border-width: 5; -fx-border-color: #9ba7e0; -fx-border-insets: -2;" text="MAIN MENU" textAlignment="CENTER" textFill="#6f61ba">
               <font>
                  <Font name="Comic Sans MS Bold" size="25.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </bottom>
   <center>
      <Pane prefHeight="300.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="179.0" layoutY="-12.0" text="YOU WON!" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS Bold" size="80.0" />
               </font>
            </Label>
            <Label fx:id="resultsLabel" layoutX="153.0" layoutY="132.0" prefHeight="110.0" prefWidth="506.0" text="Hooray! You got XX out of XX questions right! " textAlignment="CENTER" textFill="#d785ad" wrapText="true">
               <font>
                  <Font name="Comic Sans MS" size="34.0" />
               </font>
            </Label>
         </children></Pane>
   </center>
</BorderPane>
